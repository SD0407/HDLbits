module top_module(
    input  [31:0] a,
    input  [31:0] b,
    output [31:0] sum
);
    wire [15:0] t1,t2;
    wire cout0,cout1;
    
    add16 a1(.a(a[15:0]),.b(b[15:0]),.cin(1'b0),.sum(t1[15:0]),.cout(cout0));
    add16 a2(.a(a[31:16]),.b(b[31:16]),.cin(cout0),.sum(t2[15:0]),.cout(cout1));
             assign sum={t2,t1};         
endmodule
